<?xml version="1.0" encoding="UTF-8"?>

<config>

	<!-- Configuration values for the ResourceScheduler -->
	<ResourceScheduler>
		<numberOFProducers>1</numberOFProducers>
		<numberOFConsumers>2</numberOFConsumers>
	</ResourceScheduler>

	<!-- Configuration values for the Producer -->
	<Producer>
		<!-- The total number of Messages to be generated by the Producer i.e. x Interger.MAX_VALUE = 2147483647 (if a value greater than this is set a NaN exception is thrown) -->
		<numberOFMessagesToBeProduced>2147483647</numberOFMessagesToBeProduced>
		<!-- The theoretical largest groupID Long.MAX_VALUE = 9223372036854775807 (if a value greater than this is set a NaN exception is thrown) -->
		<upperBoundForGroupID>9223372036854775807 </upperBoundForGroupID>
		<!-- This is the modulo value for the interval of Terminal messages to be created (x mod m) -->
		<intervalOfTerminationMessages>8</intervalOfTerminationMessages>
		<!-- This is the modulo value for the interval of Cancellation messages to be created (x mod m) -->
		<intervalOfCancellationMessages>6</intervalOfCancellationMessages>
		<!-- The upper bound for the thread sleep in milliseconds, this can be configured to simulate different message traffic -->
		<intervalOfMessages>100</intervalOfMessages>
	</Producer>

</config>
